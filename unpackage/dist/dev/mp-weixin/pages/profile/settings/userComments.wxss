
.container.data-v-729a9704 {
  height: 100vh;
  background-color: #f7fff7;
}

/* 导航栏：标题居中 + 返回按钮右移 */
.header.data-v-729a9704 {
  height: 90rpx;
  display: flex;
  justify-content: center; /* 标题居中 */
  align-items: center;
  position: relative; /* 给返回按钮做绝对定位 */
  color: #ffffff;
  font-weight: bold;
  padding-top: var(--status-bar-height);
  background-color: var(--2ea2e108);
}

/* 返回按钮右移（从原来20rpx左距改成30rpx） */
.back-icon.data-v-729a9704 {
  position: absolute;
  left: 30rpx;
  font-size: 40rpx;
  cursor: pointer;
}
.page-title.data-v-729a9704 {
  font-size: 36rpx; /* 标题放大一点 */
  font-weight: bold;
}

/* 评论列表：增大内边距，去掉挤的负margin */
.comment-list.data-v-729a9704 {
  flex: 1;
  padding: 30rpx 30rpx 30rpx 7rpx; /* 比原来更宽松 */
}
.no-comment.data-v-729a9704 {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

/* 评论项：增大内边距和间距，不拥挤 */
.comment-item.data-v-729a9704 {
  background-color: #ffffff;
  padding: 30rpx; /* 比原来大5rpx */
  margin-bottom: 25rpx; /* 比原来大5rpx */
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}
.comment-header.data-v-729a9704 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx dashed #eee;
  /* 新增：给整个header加左内边距，让帖子标题整体左移 */
  padding-left: 0rpx;
}

/* 核心调整：帖子标题左移 - 增加左内边距/减少右外边距 */
.comment-post-title.data-v-729a9704 {
  font-size: 32rpx; /* 帖子标题放大一点 */
  font-weight: bold;
  color: var(--2ea2e108);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
  padding-left: 0rpx; /* 标题左移核心：增加左内边距（可调整数值） */
  margin-right: 10rpx; /* 减少和日期的间距，让标题更靠左 */
}
.comment-date.data-v-729a9704 {
  font-size: 24rpx;
  color: #999;
  margin-left: 5rpx; /* 减少左边距，配合标题左移 */
}
.comment-content.data-v-729a9704 {
  font-size: 34rpx; /* 内容字体放大一点 */
  color: #555;
  line-height: 1.6; /* 行高更舒展 */
  margin-bottom: 20rpx;
  display: block;
  /* 内容也轻微左移，保持整体对齐 */
  padding-left: 0rpx;
}
.comment-content-wrap.data-v-729a9704 {
    padding-left: -20rpx; /* 确保内容左对齐 */
    padding-right: 0;
}
.comment-actions.data-v-729a9704 {
  display: flex;
  justify-content: flex-end;
  /* 按钮区轻微左移，保持协调 */
  padding-left: 0rpx;
}
.action-btn.data-v-729a9704 {
  font-size: 28rpx;
  color: #666;
  padding: 5rpx 15rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  margin-left: 15rpx;
}
.delete-btn.data-v-729a9704 {
  color: #FF3B30;
  border-color: #FF3B30;
}
