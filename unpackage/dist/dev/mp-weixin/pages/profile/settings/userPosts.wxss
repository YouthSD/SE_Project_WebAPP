
.container.data-v-0aa305fc {
  height: 100vh;
  background-color: #f7fff7;
}

/* --- 顶部导航栏 --- */
.header.data-v-0aa305fc {
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  color: #ffffff;
  font-weight: bold;
  padding-top: var(--status-bar-height);
  background-color: var(--5ace2ddc);
}
.back-icon.data-v-0aa305fc {
  position: absolute;
  left: 30rpx;
  top: 55rpx;
  font-size: 40rpx;
  cursor: pointer;
}
.page-title.data-v-0aa305fc {
  font-size: 38rpx;
  font-weight: bold;
}

/* --- 搜索和筛选区 --- */
.filter-bar.data-v-0aa305fc {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.search-input.data-v-0aa305fc {
  flex: 2;
  height: 70rpx;
  background-color: #f7f7f7;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
}

/* === 修改：Picker 容器样式 === */
.picker-container.data-v-0aa305fc {
  flex: 1.8; 
  margin-right: 20rpx;
  position: relative;
}

/* 让 uni-datetime-picker 填满容器 */
.custom-picker.data-v-0aa305fc {
    width: 100%;
}
.date-picker-box.data-v-0aa305fc {
  width: 100%; 
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f7f7f7;
  border-radius: 35rpx;
  padding: 0 20rpx;
  font-size: 24rpx; 
  color: #666;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* 确保文字不换行 */
  white-space: nowrap;
  overflow: hidden;
}
.date-text.data-v-0aa305fc {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}
.search-btn.data-v-0aa305fc {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  padding: 0;
  border-radius: 35rpx;
}

/* --- 动态列表区 --- */
.post-list.data-v-0aa305fc {
    flex: 1;
    padding: 20rpx 30rpx 20rpx 7rpx;
}
.no-post.data-v-0aa305fc {
  text-align: center;
  padding: 50rpx;
  color: #999;
}
.post-item.data-v-0aa305fc {
    display: block; 
    padding: 20rpx; 
    border-bottom: 1rpx solid #eee;
    background-color: #fff;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
}
.post-info-box.data-v-0aa305fc {
    padding: 0;
}
.post-header.data-v-0aa305fc {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15rpx;
}
.post-title.data-v-0aa305fc {
    font-size: 32rpx;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    margin-right: 15rpx;
}
.post-rating.data-v-0aa305fc {
    font-size: 28rpx;
    color: #FF9900;
    font-weight: bold;
}

/* --- 底部布局 --- */
.post-footer.data-v-0aa305fc {
    display: flex;
    justify-content: space-between;
    align-items: flex-end; 
    margin-top: 10rpx;
}

/* 左侧：标签区域 */
.tags-box.data-v-0aa305fc {
    display: flex;
    flex-wrap: wrap;
    flex: 1; 
    margin-right: 20rpx;
}
.tag-item.data-v-0aa305fc {
    font-size: 20rpx;
    color: #00CC99; 
    background-color: #e6f9f2; 
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
    margin-bottom: 5rpx;
}

/* 右侧：操作和日期 */
.footer-right.data-v-0aa305fc {
    display: flex;
    flex-direction: column; 
    align-items: flex-end; 
    flex-shrink: 0;
}
.post-actions.data-v-0aa305fc {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 10rpx;
}
.action-btn.data-v-0aa305fc {
    font-size: 24rpx; 
    color: #666;
    padding: 4rpx 16rpx;
    border: 1rpx solid #ccc;
    border-radius: 20rpx;
    margin-left: 15rpx;
}
.delete-btn.data-v-0aa305fc {
    color: #FF3B30;
    border-color: #FF3B30;
}
.post-date.data-v-0aa305fc, .post-date-full.data-v-0aa305fc {
    font-size: 22rpx;
    color: #999;
}
