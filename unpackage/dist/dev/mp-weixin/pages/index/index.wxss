
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 40rpx;
  min-height: 100vh;
  background-color: #f7fff7; /* 轻微的主题色背景 */
}

/* --- Logo 区域 --- */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
  flex-grow: 1; /* 占据更多空间，让按钮偏下 */
}
.main-logo {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.app-title {
  font-size: 60rpx;
  font-weight: bold;
  letter-spacing: 5rpx;
}

/* --- 按钮区域 --- */
.button-area {
  width: 100%;
  margin-bottom: 80rpx;
}
.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #ffffff;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 204, 153, 0.4);
}
.register-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background-color: transparent;
  border: 2rpx solid;
  border-radius: 45rpx;
}
