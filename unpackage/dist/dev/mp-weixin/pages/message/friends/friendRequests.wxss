
.container.data-v-b59a1e0a {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7fff7;
}

/* --- 顶部导航栏 (与 friendList 样式保持一致) --- */
.header.data-v-b59a1e0a {
  height: 90rpx;
  display: flex;
  align-items: center;
  position: relative;
  color: #ffffff;
  font-weight: bold;
  padding-top: var(--status-bar-height);
  background-color: var(--3fc30417);
}
.back-icon.data-v-b59a1e0a {
  position: absolute;
  left: 30rpx;
  font-size: 40rpx;
  cursor: pointer;
}
.page-title.data-v-b59a1e0a {
  flex: 1;
  text-align: center;
  font-size: 38rpx;
  margin-right: 60rpx;
}

/* --- 请求列表区 --- */
.request-list.data-v-b59a1e0a {
  flex: 1;
  background-color: #ffffff;
}
.no-request.data-v-b59a1e0a {
  text-align: center;
  padding: 50rpx;
  color: #999;
}
.request-item.data-v-b59a1e0a {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}
.avatar.data-v-b59a1e0a {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.request-info.data-v-b59a1e0a {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.request-user-nickname.data-v-b59a1e0a {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}
.request-message.data-v-b59a1e0a {
  font-size: 26rpx;
  color: #999;
  margin-top: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.action-box.data-v-b59a1e0a {
  width: 150rpx;
  text-align: right;
}
.action-btn.data-v-b59a1e0a {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 30rpx;
  margin: 0;
}
.status-text.data-v-b59a1e0a {
  font-size: 28rpx;
  color: #ccc;
}
.accepted-text.data-v-b59a1e0a {
  color: var(--3fc30417);
}
